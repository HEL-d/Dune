<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Astergen2" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <!-- Customize your theme here. -->
        <!-- text color. -->
        <item name="android:textColor">@color/black</item>
        <!-- background color. -->
<!--        <item name="android:background">@color/white</item>-->
        <!-- drawable background color. -->
        <item name="android:buttonTint">@color/black</item>
        <!-- windows theme . -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="buttonface_picture">@drawable/ic_baseline_arrow_right_alt_24</item>
        <item name="backbutton">@drawable/ic_baseline_arrow_back_24</item>
        <item name="backgroundstyle">@color/white</item>
        <item name="foregroundstyle">@color/Transparent</item>
        <item name="nedit">@color/white</item>
        <item name="nstroke">@color/baby_black</item>
    </style>
    <attr name="nstroke" format="reference"/>
    <attr name="nedit" format="reference"/>
    <attr name="backbutton" format="reference"/>
    <attr name="buttonface_picture" format="reference"/>
    <attr name="backgroundstyle" format="reference"/>
    <attr name="foregroundstyle" format="reference"/>
    <style name="Widget.App.CardView" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardForegroundColor">@color/Transparent</item>
        <item name="android:strokeColor">@color/white</item>
    </style>
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored" tools:ignore="NewApi">
        <item name="colorButtonNormal">@color/black</item>
        <item name="android:colorButtonNormal">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>



</resources>