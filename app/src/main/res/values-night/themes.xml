<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Astergen2.night" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >#292929</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <!-- text color. -->
        <item name="android:textColor">@color/white</item>
        <!-- backgroundcolor. -->
        <item name="android:background">#292929</item>
        <!-- windows theme . -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="buttonface_picture">@drawable/ic_baseline_arrow_right_alt_25</item>
        <item name="backbutton">@drawable/ic_baseline_arrow_back_27</item>
        <item name="backgroundstyle">@color/baby_black</item>
        <item name="foregroundstyle">@color/semitransparent</item>
        <item name="editTextBackground">@color/baby_black</item>
        <item name="nedit">@color/baby_black</item>
        <item name="nstroke">@color/white</item>
    </style>
    <attr name="nstroke" format="reference"/>
    <attr name="nedit" format="reference"/>
    <attr name="backbutton" format="reference"/>
    <attr name="buttonface_picture" format="reference"/>
    <attr name="backgroundstyle" format="reference"/>
    <attr name="foregroundstyle" format="reference"/>
    <style name="Widget.App.CardView" parent="CardView">
       <item name="cardBackgroundColor">#121212</item>
        <item name="cardForegroundColor">#26FFFFFF</item>
        <item name="android:strokeColor">#292929</item>
    </style>




</resources>