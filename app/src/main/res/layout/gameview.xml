<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/briclayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/fringer"
        android:layout_width="200dp"
        android:layout_height="500dp"
        android:background="@drawable/fringerone"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />






    <LinearLayout
        android:id="@+id/ncc"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Err"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/prr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


    </LinearLayout>














    <RelativeLayout
        android:id="@+id/button28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/carone"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">





    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/savebutton"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:textAllCaps="false"
       android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:background="@drawable/shinebg" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/Transparent"
            android:text="Finish"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/shine"
            android:layout_width="50dp"
            android:layout_height="170dp"
            android:layout_marginLeft="-50dp"
            android:background="@drawable/gamechat"
            android:rotation="20" />


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/mainrelative"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/edittextm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/gamechat"
            android:imeOptions="normal"
            android:maxLines="3"
            android:textColorHint="#808080"
            android:hint="Send mich.."
            android:textSize="18sp"
            android:paddingVertical="15dp"
            android:paddingStart="52dp"
            android:paddingEnd="30dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageButton
            android:id="@+id/sendbutton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/arrow"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp" />

        <ImageButton
            android:id="@+id/emo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/emotj"
             />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/gamepro"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">



            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/black"
                android:indeterminateTintMode="src_in"
                android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trip"
            android:textColor="@color/baby_black"
            android:layout_gravity="center"
            android:textSize="18sp" />


    </LinearLayout>











</androidx.constraintlayout.widget.ConstraintLayout>