<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">




       <com.google.android.material.card.MaterialCardView
           android:layout_width="50dp"
           app:cardElevation="24dp"
           android:layout_marginStart="25dp"
           android:layout_marginTop="20dp"
           android:id="@+id/meme"
           style="@style/Widget.App.CardView"
           app:cardCornerRadius="10dp"
           android:layout_height="40dp">
           <ImageView
               android:layout_width="wrap_content"
               android:background="?attr/backbutton"
               android:layout_gravity="center"
               android:layout_height="wrap_content"/>
       </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.App.CardView"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_below="@id/meme"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="24dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:backgroundTint="?attr/backgroundstyle"
            android:foregroundTint="?attr/foregroundstyle"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/wwe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/lato"
                android:background="@color/Transparent"
                android:text="Enter phone no"
                android:textSize="20sp"
                android:textStyle="bold" />


            <com.caverock.androidsvg.SVGImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_below="@id/wwe"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:background="@color/Transparent"
                app:svg="phon.svg" />


            <EditText
                android:id="@+id/mmm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wwe"
                android:layout_marginStart="65dp"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:paddingStart="18dp" />


            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/mmm"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_npm"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="1"
                android:textSize="22sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/mmm"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_npm"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="2"
                android:textSize="22sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/saly"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/mmm"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/ic_npm"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="3"
                android:textSize="22sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/wlk"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/saly"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/ic_npm"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="4"
                android:textSize="22sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/saly"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/ic_npm"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="5"
                android:textSize="22sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/saly"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/ic_npm"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="6"
                android:textSize="22sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tlk"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/wlk"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/ic_npm"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="7"
                android:textSize="22sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/wlk"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/ic_npm"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="8"
                android:textSize="22sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/wlk"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/ic_npm"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="9"
                android:textSize="22sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/tlk"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:background="@drawable/ic_npm"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="0"
                android:textSize="22sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/tlk"
                android:layout_marginStart="30dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/ic_jole"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_close_24"
                android:text="#"
                android:textSize="18sp" />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/tlk"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/ic_kmp"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_arrow_forward_24"
                android:text="#"
                android:textSize="18sp" />


        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>








































</RelativeLayout>