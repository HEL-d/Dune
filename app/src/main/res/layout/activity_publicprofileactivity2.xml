<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".publicprofileactivity2">


    <WebView
        android:id="@+id/webview3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/pav"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/circleripple"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">


    </RelativeLayout>






    <com.caverock.androidsvg.SVGImageView
        android:layout_width="45dp"
        app:svg="rocket.svg"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="20dp"
        android:layout_height="45dp"
        android:background="@color/Transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <TextView
        android:id="@+id/no_avatra2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="No avatar found"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />





    <TextView
        android:id="@+id/username_profile3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Transparent"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.evw.aster.MaterialNeonProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/profile_bar3"
        app:layout_constraintBottom_toBottomOf="@+id/webview3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />






    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/ash"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/Transparent">

            <ImageView
                android:layout_width="65dp"
                android:id="@+id/profile_view3"
                android:background="@color/white"
                android:src="@drawable/blankprofile"
                android:layout_height="65dp"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:backgroundTint="@color/Transparent"
            android:id="@+id/name_profile3"
            android:layout_marginStart="100dp"
            android:textSize="19sp"
            android:layout_marginTop="19dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:backgroundTint="@color/Transparent"
            android:id="@+id/bio_profile3"
            android:layout_marginStart="100dp"
            android:textSize="18sp"
            android:layout_marginTop="46dp"
            android:layout_height="wrap_content"/>



        <com.google.android.material.chip.Chip
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Send Message"
            android:textAlignment="center"
            android:id="@+id/sendmessage1"
            app:chipBackgroundColor="@color/Aster_neo"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/lato"
            android:layout_gravity="center_horizontal|bottom"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="15dp"/>



    </com.google.android.material.card.MaterialCardView>

















</androidx.constraintlayout.widget.ConstraintLayout>