<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".avatargen">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="#808080"
        android:textStyle="bold"
        android:id="@+id/skip_text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <com.caverock.androidsvg.SVGImageView
        android:id="@+id/SVGImageView"
        android:layout_width="190dp"
        android:layout_height="190dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:svg="virtual.svg" />


    <TextView
        android:id="@+id/three_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato"
        android:text="Create 3d Avatar"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SVGImageView"
        app:layout_constraintVertical_bias="0" />


    <com.smb.glowbutton.GlowButton
        android:id="@+id/create_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="15dp"
        app:gb_backgroundColor="@color/Aster_neo"
        app:gb_cornerRadius="8dp"
        app:layout_constraintVertical_bias="0"
        app:gb_disabledTextColor="#808080"
        app:gb_glowAnimationDuration="500"
        app:gb_glowColor="@color/Aster_neo"
        app:gb_rippleAnimationDuration="1500"
        app:gb_rippleColor="@color/purple_500"
        app:gb_rippleEnabled="true"
        app:gb_textColor="@color/Aster_neo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/three_d" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create avatar"
        android:textColor="@color/black"
        android:backgroundTint="@color/Transparent"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/create_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/create_avatar"
        tools:ignore="TextContrastCheck" />






    <com.smb.glowbutton.GlowButton
        android:id="@+id/update_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        app:gb_backgroundColor="@color/Aster_neo"
        app:gb_cornerRadius="8dp"
        app:gb_disabledTextColor="#808080"
        app:gb_glowAnimationDuration="500"
        app:gb_glowColor="@color/Aster_neo"
        app:gb_textColor="@color/Aster_neo"
        app:gb_rippleColor="@color/purple_500"
        app:gb_rippleAnimationDuration="1500"
        app:gb_rippleEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_avatar" />






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update avatar"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:backgroundTint="@color/Transparent"
        android:textSize="16sp"
        android:visibility="gone"
        android:id="@+id/my_text"
        app:layout_constraintBottom_toBottomOf="@+id/update_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/update_avatar"
        tools:ignore="TextContrastCheck" />



</androidx.constraintlayout.widget.ConstraintLayout>