<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SceneActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Vishalpratap319"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <RelativeLayout
        android:id="@+id/pav"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/circleripple"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">


    </RelativeLayout>

    <com.caverock.androidsvg.SVGImageView
        android:layout_width="45dp"
        app:svg="setting.svg"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="14dp"
        android:layout_height="45dp"
        android:background="@color/Transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/nkl"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:background="@drawable/circleripple"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="20dp"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pav"
        tools:ignore="SpeakableTextPresentCheck">

    </RelativeLayout>

    <com.caverock.androidsvg.SVGImageView
        android:id="@+id/search_po"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:background="@color/Transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@+id/pav"
        app:svg="pencil.svg" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="12dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/blackbc"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:text="Name"
            android:background="@color/Transparent"
            android:textSize="16sp"

            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:text="Vishal pratap"
            android:maxLength="26"
            android:background="@color/Transparent"
            android:textSize="16sp"
            android:layout_marginTop="37dp"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="25dp"
            android:layout_height="wrap_content"/>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="@drawable/ripplefor"
            android:layout_gravity="right"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:focusable="true"
            android:id="@+id/conn"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Connection"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@color/Transparent"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="500"
                android:background="@color/Transparent"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="32dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>







    </com.google.android.material.card.MaterialCardView>














</androidx.constraintlayout.widget.ConstraintLayout>